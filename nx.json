{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint"]
      }
    }
  },
  "namedInputs" : {
    "src" : ["{projectRoot}/src/**/*"],
    "test" : ["{projectRoot}/test/**/*"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src", "^src"],
      "outputs": ["{projectRoot}/build"]
    },
    "watch": {
      "dependsOn": ["build"]
    },
    "compile": {
      "inputs": ["src", "^src"],
      "dependsOn": ["^compile"],
      "outputs": ["{projectRoot}/build"]
    },
    "test": {
      "inputs": ["test", "^test", "{workspaceRoot}/opr-example-server/Dockerfile.dev"],
      "dependsOn": ["build"],
      "outputs": ["{projectRoot}/build"]
    }
  }
}
